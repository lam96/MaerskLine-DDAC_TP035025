@model MaerskLine.ViewModels.MaerskViewModel
@{
    ViewBag.Title = "SelectCustomer";
}

<h2>SelectCustomer</h2>

<table class="table">
    <tr>
        <th>
            Schedule ID
        </th>
        <th>
            Schedule Origin
        </th>
        <th>
            Schedule Destination
        </th>
        <th>
            Schedule Departure Time
        </th>
        <th>
            Schedule Arrival Time
        </th>
    </tr>
    <tr>
        <td>
            @Model.Schedule.ScheduleId
        </td>
        <td>
            @Model.Schedule.Origin
        </td>
        <td>
            @Model.Schedule.Destination
        </td>
        <td>
            @Model.Schedule.DepartTime
        </td>
        <td>
            @Model.Schedule.ArriveTime
        </td>
    </tr>
</table>

<table class="table">
    <tr>
        <th>
            Ship ID
        </th>
        <th>
            Ship Name
        </th>
        <td>
            Ship Container Number
        </td>
    </tr>
    <tr>
        <td>
            @Model.Ship.ShipId
        </td>
        <td>
            @Model.Ship.ShipName
        </td>
        <td>
            @Model.Ship.ShipContainerNo
        </td>
    </tr>
</table>


<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Email
        </th>
        <th>
            ContactNumber
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Customers)
    {
        <tr>
            <td>
                @item.Name
            </td>
            <td>
                @item.Email
            </td>
            <td>
                @item.MobilePhoneNumber
            </td>
            <td>
                @Html.ActionLink("Select", "ChooseContainer", "Booking", new { Customerid = item.CustomerId, ScheduleId = @Model.Schedule.ScheduleId, Shipid = @Model.Ship.ShipId }, new { @class = "btn btn-warning btn-xs" })
            </td>
        </tr>
    }

</table>


