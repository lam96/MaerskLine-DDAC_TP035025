@model MaerskLine.ViewModels.MaerskViewModel
@{
    ViewBag.Title = "ChooseContainer";
}

<h2>ChooseContainer</h2>

<table class="table">
    <tr>
        <th>
            Schedule Id
        </th>
        <th>
            Schedule Origin
        </th>
        <th>
            Schedule Destination
        </th>
        <th>
            Schedule Depart Time
        </th>
        <th>
            Schedule Arrival Time
        </th>
    </tr>
    <tr>
        <td>
            @Model.Schedule.ScheduleId
        </td>
        <td>
            @Model.Schedule.Origin
        </td>
        <td>
            @Model.Schedule.Destination
        </td>
        <td>
            @Model.Schedule.DepartTime
        </td>
        <td>
            @Model.Schedule.ArriveTime
        </td>
    </tr>
</table>

<table class="table">
    <tr>
        <th>
            Ship Id
        </th>
        <th>
            Ship Name
        </th>
        <td>
            Ship Container Number
        </td>
    </tr>
    <tr>
        <td>
            @Model.Ship.ShipId
        </td>
        <td>
            @Model.Ship.ShipName
        </td>
        <td>
            @Model.Ship.ShipContainerNo
        </td>
    </tr>
</table>

<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Email
        </th>
        <th>
            Mobile Phone Number
        </th>
    </tr>
    <tr>
        <td>
            @Model.Customer.Name
        </td>
        <td>
            @Model.Customer.Email
        </td>
        <td>
            @Model.Customer.MobilePhoneNumber
        </td>
    </tr>
</table>


@using (Html.BeginForm("CreateBooking", "Booking"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>New Container</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Container.ItemsType, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Container.ItemsType, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Container.ItemsType, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Container.WeightInTonne, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Container.WeightInTonne, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Container.WeightInTonne, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.HiddenFor(m => m.Schedule.ScheduleId)
        @Html.HiddenFor(m => m.Customer.CustomerId)
        @Html.HiddenFor(m => m.Container.ContainerId)
        @Html.HiddenFor(m => m.Ship.ShipId)
        @Html.HiddenFor(m => m.Bookings.BookingId)


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create Booking" class="btn btn-default" />
            </div>
        </div>
    </div>
}


